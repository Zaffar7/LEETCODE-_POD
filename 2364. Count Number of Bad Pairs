leetcode :https://leetcode.com/problems/count-number-of-bad-pairs/submissions/1537691415/?envType=daily-question&envId=2025-02-09
class Solution {
    public long countBadPairs(int[] nums) {
        long result=0;
        for(int i=0;i<nums.length;i++){
            nums[i]=nums[i]-i;
        }
        HashMap<Integer,Integer> map= new HashMap<>();
         map.put(nums[0],1);
        for(int i=1;i<nums.length;i++){
            int countOfNumsj = map.getOrDefault(nums[i], 0);
             int totalNumsBeforej = i;
            int badPairs = totalNumsBeforej - countOfNumsj;
            result += badPairs;
            map.put(nums[i], countOfNumsj + 1);
        }
        return result;
    }
}
