leetcode: https://leetcode.com/problems/minimum-operations-to-exceed-threshold-value-ii/description/?envType=daily-question&envId=2025-02-13
class Solution {
    public int minOperations(int[] nums, int k) {
        PriorityQueue<Long>pq= new PriorityQueue<>();
        for(int i=0;i<nums.length;i++){
            pq.add((long)nums[i]);
        }
        int cnt=0;
         while (pq.size()>1 ) {
                 if(pq.peek()>=k)  return cnt; 
           long a=pq.remove();  
            long b =pq.remove();
            long x=  a*2 +  b; 
            pq.add(x);
          cnt++;
         }
         return cnt;
    }
}
