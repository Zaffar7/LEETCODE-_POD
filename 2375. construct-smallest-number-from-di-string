leetcode: https://leetcode.com/problems/construct-smallest-number-from-di-string/description/
java
class Solution {
    public String smallestNumber(String pattern) {
       StringBuilder sb = new StringBuilder();
int n = pattern.length() + 1;
for(int i = 0; i < n; i++) sb.append(i + 1);
System.out.print(sb);
for(int i=0;i<pattern.length();i++){
    if(pattern.charAt(i)=='I'){
        if(sb.charAt(i)>sb.charAt(i+1)){
          swap(i,i+1,sb);
        }
    }else {if(sb.charAt(i)<sb.charAt(i+1)){
          swap(i,i+1,sb);
           int j = i;
                while (j > 0 && pattern.charAt(j - 1) == 'D' && sb.charAt(j - 1) < sb.charAt(j)) {
                    swap(j - 1, j, sb);
                    j--;
                }
        }

    }
}
        
        return sb.toString();

    }
    void swap(int idx1, int idx2, StringBuilder sb){
        char ch= sb.charAt(idx1);
       sb.setCharAt(idx1, sb.charAt(idx2));  // âœ… Correct way to set character
    sb.setCharAt(idx2, ch);
    }
}
