leetcode:https://leetcode.com/problems/find-the-number-of-distinct-colors-among-the-balls/description/?envType=daily-question&envId=2025-02-07
java
class Solution {
    public int[] queryResults(int limit, int[][] queries) {
        int ans[]= new int[queries.length];
          HashMap<Integer, Integer> col = new HashMap<>(); // Store only updated positions
        HashMap<Integer, Integer> colorCount = new HashMap<>();
         int uniqueColors = 0;
        for(int i=0;i<queries.length;i++){
           int u=queries[i][0];
           int v=queries[i][1];
          if (col.containsKey(u)) {
                int oldColor = col.get(u);
                colorCount.put(oldColor, colorCount.get(oldColor) - 1);
                if (colorCount.get(oldColor) == 0) {
                    colorCount.remove(oldColor);
                    uniqueColors--;
                }
            }
            col.put(u, v);
            colorCount.put(v, colorCount.getOrDefault(v, 0) + 1);
            if (colorCount.get(v) == 1) {
                uniqueColors++;
            }

            ans[i] = uniqueColors;
        }
     return ans;  
    }
}
